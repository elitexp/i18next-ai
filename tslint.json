{
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "camel-case-local-functions": true,
    "class-name": true,
    "curly": true,
    "declare-class-methods-after-use": true,
    "indent": [ true, "tabs" ],
    "interface-name": [ true, "never-prefix" ],
    "jsx-attribute-spacing": true,
    "jsx-expression-spacing": true,
    "jsx-no-braces-for-string-attributes": true,
    "jsx-no-closing-bracket-newline": true,
    "label-position": true,
    "no-arg": true,
    "class-method-newlines": true,
    "no-braces-for-single-line-arrow-functions": true,
    "no-consecutive-blank-lines": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty-line-after-opening-brace": true,
    "no-eval": true,
    "no-inferrable-types": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-parens-for-arrow-function-arguments": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "one-variable-per-declaration": true,
    "prefer-const": true,
    "prefer-or-operator-over-ternary": true,
    "quotemark": [ true, "single", "avoid-escape" ],
    "radix": true,
    "semicolon": [ true, "always" ],
    "sort-imports": true,
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "variable-name": false,
    "whitespace": [
      false,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  },
  "rulesDirectory": [
    "./node_modules/tslint-microsoft-contrib",
    "./node_modules/tslint-misc-rules/rules"
  ]
}
